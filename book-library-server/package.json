{
  "name": "book-library-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node ./dist/index.js",
    "dev": "nodemon",
    "copy:assets:build": "copyfiles -u 1 \"assets/**/*\" dist/assets",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "npx drizzle-kit push",
    "docker:db:down": "docker-compose -f docker-compose.db.yml down",
    "docker:db:up": "docker-compose -f docker-compose.db.yml up -d",
    "test": "npm run build && node ./dist/index.test.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/static": "^8.2.0",
    "@types/lodash": "^4.17.17",
    "@types/uuid": "^10.0.0",
    "config": "^4.0.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.0",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.16.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "@types/pg": "^8.15.2",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.1",
    "node-pg-migrate": "^8.0.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
